<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_broadcast"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/broadcast"/>

    <TextView
        android:id="@+id/wait_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_broadcast"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Broadcasting"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/wait_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wait_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:text="@string/waiting_all"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Start"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

</RelativeLayout>
